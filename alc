#!/bin/zsh

version="1.1.1"
# option
CMDNAME=`basename $0`
while getopts hiov OPT
do
  case $OPT in
    "i" ) FLG_i="TRUE" ;;
    "h" ) FLG_h="TRUE" ;;
    "o" ) FLG_o="TRUE" ;;
    "v" ) FLG_v="TRUE" ;;
      * ) echo "Usage: $CMDNAME [-h] [-i word] [-o word] [-v]" 1>&2
          exit 1;;
  esac
done
shift `expr $OPTIND - 1`
temp=`echo $* | sed 's/\ /+/g'`
if [[ "$FLG_h" = "TRUE" ]]; then
  echo "
    Usage: $CMDNAME [-h] [-i word] [-o word] [-v]
  " | sed  -e 's/^ *//g' -e '1d' -e '$d'
  exit 0
fi
if [[ "$FLG_o" = "TRUE" ]]; then
  open 'http://eow.alc.co.jp/search?q='$temp
  exit 0
fi
if [[ "$FLG_v" = "TRUE" ]]; then
  echo "$version"
  exit 0
fi
# color
red=`tput setaf 1`
green=`tput setaf 2`
white=`tput setaf 7`
reset=`tput sgr0`
bold=`tput bold`
# alc
func_alc(){
local NUM=`w3m -dump 'http://eow.alc.co.jp/search?q='$temp | grep -n 単語帳 | head -1 | awk -F ':' '{print $1}'`
local NULL=""
if [[ $NUM = $NULL ]]; then
  echo "${red}failed${reset}"
else
  NUM=`expr $NUM - 1`
  local dic=`w3m -dump 'http://eow.alc.co.jp/search?q='$temp | head -$NUM | tail -n +36`
  echo "${white}${dic}${reset}"
fi
}
func_alc $temp
if [[ "$FLG_i" = "TRUE" ]]; then
  echo $NULL
  echo -n "${bold}${green}alc>${reset} "
  read str
  while [[ "$str" != $NULL ]]
  do
    alc "$str"
    echo $NULL
    echo -n "${bold}${green}alc>${reset} "
    read str
  done
fi
exit 0
